const important = [{
    id: 1,
    title: 'Important note #1',
    date: '22-09-2016',
    class: 'important class',
    finished: false,
    type: 'important'
},
{
    id: 2,
    title: 'Important note #2',
    date: '07-04-1999',
    class: 'important class',
    finished: true,
    type: 'important'
}]

const important_array = JSON.stringify(important)
localStorage.setItem('important', important_array)

